<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
    {{#each register_msg}}
        <div class="alert show showAlert">
        <span class="msg">{{this}}</span>
        </div>
    {{/each}}
    <div class="container" id="container">
        <div class="form-container sign-up">
            <form action="/register" method="POST">
                <h1>Tạo Tài Khoản</h1>
                <div class="social-icons">
                    <a href="/login/gg" class="icon"><i class="fa-brands fa-google-plus-g"></i></a>
                    <a href="/login/fb" class="icon"><i class="fa-brands fa-facebook-f"></i></a>
                </div>
                <span>Tạo tài khoản với email</span>
                <input type="text" placeholder="Tên tài khoản" id="name" name="username" required>
                <input type="text" placeholder="Email của bạn" id="email" name="email" required>
                <input type="password" placeholder="Mật khẩu" id="pass" name="password" required>
                <button type="submit">Đăng kí</button>
            </form>
        </div>
        <div class="form-container sign-in">
            <form action="/login" method="POST">
                <h1>Đăng Nhập</h1>
                <div class="social-icons">
                    <a href="/login/gg" class="icon"><i class="fa-brands fa-google-plus-g"></i></a>
                    <a href="/login/fb" class="icon"><i class="fa-brands fa-facebook-f"></i></a>
                </div>
                <span>Đăng nhập bằng email</span>
                <input type="text" placeholder="Tên tài khoản" id="name" name="username" required>
                <input type="password" placeholder="Mật khẩu" id="pass" name="password" required>
                <a id="forgot" href="/login/forgetpassword">Quên mật khẩu?</a>

                <button>Đăng Nhập</button>
            </form>
        </div>
        <div class="toggle-container">
            <div class="toggle">
                <div class="toggle-panel toggle-left">
                    <h1>Đã có tài khoản?</h1>
                    <p>Quay lại với trải nghiệm không giới hạn của trang😊</p>
                    <button class="hidden" id="login">Đăng Nhập</button>
                </div>
                <div class="toggle-panel toggle-right">
                    <h1>Chưa có tài khoản?</h1>
                    <p>Đăng kí để trải nghiệm tất cả tính năng của trang😊</p>
                    <button class="hidden" id="register">Đăng Kí</button>
                </div>
            </div>
        </div>
    </div>


</body>

</html>