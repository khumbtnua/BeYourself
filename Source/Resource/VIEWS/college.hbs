<div class="alert hide">
  <span class="fas fa-exclamation-circle"></span>
  <span class="msg">Hãy đăng nhập để sử dụng tính năng</span>
  <div class="close-btn">
    <span class="fas fa-times"></span>
  </div>
</div>

<div class="info-container">
  {{#with college}}
    <div class="introduction">
      <div class="introduction-content">
        <div class="imgContainer">
          <img src="{{img}}" alt="" class="uniLogo" />
        </div>
        <div class="introduction-text">
          <h1>{{Name}}</h1>
        </div>
      </div>
      <div>
        <button class="saveUni" type="submit" title="Lưu trường đại học"><i
            class="fa-regular fa-bookmark icon-save"
          ></i></button>
      </div>
    </div>
    {{#if Intro}}
      <h2 class="heading">Giới thiệu</h2>
      {{{Intro}}}
    {{else}}
    {{/if}}
    {{#if News}}
      <h2 class="heading">Tin tức mới nhất</h2>
      {{{News}}}
    {{else}}
    {{/if}}
   {{#if Info}}
      <h2 class="heading">Thông tin tuyển sinh</h2>
      {{{Info}}}
    {{else}}
    {{/if}}
    {{#if Curr}}
      <h2 class="heading">Chương trình đào tạo</h2>
      {{{Curr}}}
    {{else}}
    {{/if}}
    {{#if Field}}
      <h2 class="heading">Ngành học và lĩnh vực</h2>
      {{{Field}}}
    {{else}}
    {{/if}}
  {{/with}}
</div>
<div class="total-contai-comment">
  <h2 class="commenttile">Đánh giá
    <img src="/img/tool_imgs/down2.png" class="dropdowncommentimg" /></h2>
  <div class="commentcontai">
    <div class="commentlist">
      <div class="commentPost-area">
        <form action="">
          <textarea
            name="comment"
            id="Comment"
            placeholder="Nhập bình luận của bạn"
            class="commentMsg"
          ></textarea>
          <button
            type="submit"
            class="btn-hover color-9 commentSubmitBtn"
            title="Đăng bình luận"
          >Tạo bình luận</button>
        </form>
      </div>
      <div class="comment-area"></div>
    </div>
  </div>
</div>
<script src="https://cdn.socket.io/4.7.5/socket.io.min.js"></script>
<template id="data-container" data-userId="{{userId}}"></template>