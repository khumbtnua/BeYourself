{{#each errorForgotPassMsg}}
  <div class="alert show showAlert">
    <span class="msg">{{this}}</span>
  </div>
{{/each}}

<div id="container">
  <form action="http://localhost:5500{{path}}" method="POST">
    <h1>Mật khẩu của bạn phải có tối thiểu 6 ký tự, đồng thời bao gồm cả chữ số,
      chữ cái và ký tự đặc biệt</h1>
    <div id="line">
      <input
        type="password"
        placeholder="Nhập mật khẩu mới"
        name="newpass"
        id="password"
      />
      <button>Change</button>
      <img src="/img/tool_imgs/edit2.png" alt="" />
    </div>
  </form>
</div>